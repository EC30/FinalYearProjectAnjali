<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".AddFriendActivity">

    <androidx.appcompat.widget.Toolbar

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
        app:title="Friends"
        app:titleTextColor="@color/fbutton_color_clouds"
        android:background="@color/fbutton_color_amethyst"
        android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar"
        tools:ignore="MissingConstraints">

    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondTextView">

        <androidx.cardview.widget.CardView
            android:id="@+id/myCircleCardView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            android:layout_margin="10dp"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="177dp"
                android:background="@drawable/cardviewgradient2"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/myCircleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/myCircleImage"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:text="My Circle"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:fontFamily="@font/montserrat" />

                <ImageView
                    android:id="@+id/myCircleImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    app:srcCompat="@drawable/friendcirle" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            app:cardCornerRadius="8dp"
            android:id="@+id/viewRequestCardView"
            app:cardElevation="8dp"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@drawable/cardviewgradient3"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/viewRequestText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/viewRequestImageView"
                    android:textAlignment="center"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:text="View Request"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    app:fontFamily="@font/montserrat"/>
                <ImageView
                    android:id="@+id/viewRequestImageView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    app:srcCompat="@drawable/friendrequest" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayoutaa"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondTextView">

        <androidx.cardview.widget.CardView
            android:id="@+id/addFriendsCardView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@drawable/cardviewgradient1"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/addFriendTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/addFriendImageView"
                    android:textAlignment="center"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:text="Add Friends"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    app:fontFamily="@font/montserrat" />

                <ImageView
                    android:id="@+id/addFriendImageView"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="18dp"
                    app:srcCompat="@drawable/addfriend" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:cardCornerRadius="8dp"
            android:id="@+id/sentRequestCardView"
            app:cardElevation="8dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@drawable/cardviewgradient5"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/sentRequestTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sentRequestImageView"
                    android:textAlignment="center"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:text="My Sent Request"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    app:fontFamily="@font/montserrat" />
                <ImageView
                    android:id="@+id/sentRequestImageView"
                    android:layout_width="100dp"
                    android:layout_height="75dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    app:srcCompat="@drawable/sentrequest" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_margin="10dp"
        app:cardElevation="8dp"
        android:id="@+id/viewFriendsLocationCardView"
        app:cardCornerRadius="8dp"
        android:layout_weight="1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/cardviewgradient4"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/viewFriendsLocationTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/viewFriendsLocationImage"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:text="View Friends Location"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="15dp"
                app:fontFamily="@font/montserrat" />
            <ImageView
                android:id="@+id/viewFriendsLocationImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                app:srcCompat="@drawable/location" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>