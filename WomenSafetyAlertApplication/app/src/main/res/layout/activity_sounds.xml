<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SoundsActivity">

    <androidx.appcompat.widget.Toolbar

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/soundsToolbar"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
        app:title="Sounds"
        app:titleTextColor="@color/fbutton_color_clouds"
        android:background="@color/fbutton_color_amethyst"
        android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar"
        tools:ignore="MissingConstraints">

    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:id="@+id/psCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="10dp"
        app:cardCornerRadius="8dp"
        tools:layout_editor_absoluteX="-25dp"
        tools:layout_editor_absoluteY="112dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/emergencycontactborder"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:id="@+id/psTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/baloo"
                android:shadowColor="#000000"
                android:text="Police Siren Sound"
                android:textSize="20sp" />

        </LinearLayout>

        <Button
            android:id="@+id/bt_pause"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Pause"
            android:layout_marginLeft="100dp"
            android:background="@drawable/confirmbutton"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_play"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="100dp"
            android:text="Play"
            android:background="@drawable/confirmbutton"
            android:layout_gravity="center" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/sound2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="10dp"
        app:cardCornerRadius="8dp"
        tools:layout_editor_absoluteX="-25dp"
        tools:layout_editor_absoluteY="112dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/emergencycontactborder"
            android:orientation="horizontal"
            android:padding="15dp">


            <TextView
                android:id="@+id/TextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/baloo"
                android:shadowColor="#000000"
                android:text="Ambulance Siren"
                android:textSize="20sp" />

        </LinearLayout>

        <Button
            android:id="@+id/bt_pause2"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Pause"
            android:layout_marginLeft="100dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_play2"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="100dp"
            android:text="Play"
            android:background="@drawable/confirmbutton"
            android:layout_gravity="center" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="10dp"
        app:cardCornerRadius="8dp"
        tools:layout_editor_absoluteX="-25dp"
        tools:layout_editor_absoluteY="112dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/emergencycontactborder"
            android:orientation="horizontal"
            android:padding="15dp">


            <TextView
                android:id="@+id/TextView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/baloo"
                android:shadowColor="#000000"
                android:text="Police Siren Sound"
                android:textSize="20sp" />

        </LinearLayout>

        <Button
            android:id="@+id/bt_pause3"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Pause"
            android:layout_marginLeft="100dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_play3"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="100dp"
            android:text="Play"
            android:background="@drawable/confirmbutton"
            android:layout_gravity="center" />
    </androidx.cardview.widget.CardView>

</LinearLayout>